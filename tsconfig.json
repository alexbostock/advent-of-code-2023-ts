{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dest",
    "sourceMap": false,
    "target": "es2017",
    "useDefineForClassFields": false,
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "types": ["node"],
    "rootDir": ".",
    "paths": {
      "myLib/*": ["src"]
    }
  },

  "include": ["src", "global.d.ts"]
}
